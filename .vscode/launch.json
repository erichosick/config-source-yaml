{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha Tests",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--watch",
              "--ui", "bdd",
              "--timeout", "999999",
              "--colors", "--recursive",
          ],
          "internalConsoleOptions": "openOnSessionStart"
      }
  ]
}